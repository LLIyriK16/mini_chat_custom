<li class="media comment">
  <%= link_to image_tag('user_avatar.png',size: "40", alt: comment.user.email, class: "media-object"),
              comment.user.profile_url, target: '_blank', class: 'pull-left' %>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to comment.user.email, profile_path(comment.user), target: '_blank' %> says
      <small class="text-muted">[at <%= comment.created_at.strftime('%-d %B %Y, %H:%M:%S') %>]</small></h4>
    <p>
      <%= comment.body %>
    </p>
  </div>
</li>